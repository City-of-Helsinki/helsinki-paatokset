<div class="meeting-video">
  {% if content.name|render %}
    <h3 class="video__name">
      {{ content.name }}
    </h3>
  {% endif %}
  
  <div class="meeting-video__video-container">
    {{ content.embed_url }}
  </div>

  {% if all_recordings_link %}
    <div class="view-all view-all--recordings">
      <a class="paatokset-button-link" href="{{ all_recordings_link }}">
        <span>{{ 'All recordings' }}</span>
        <i class="hds-icon hds-icon--arrow-right"></i>
      </a>
    </div>
  {% endif %}
</div>