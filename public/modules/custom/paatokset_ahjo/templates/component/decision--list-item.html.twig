{#
  /**
  * Template for single decision list item.
  * Available variables:
  * - decision
  */
#}

<div class="policymaker-list-item policymaker-list-item--decision" role="region" aria-label="{{ 'Decision'|t }}">
  <div class="list-item__date">
    <span class="list-item__date--desktop">{{ decision.date_desktop }}</span>
    <span class="list-item__date--mobile">{{ decision.date_mobile }}</span>
  </div>
  <div class="list-item__subject">
    <a href="{{ decision.link }}">
      {{ decision.subject }}
    </a>
  </div>
  {% if decision.file_url %}
  <div class="decision__pdf">
    <a class="paatokset-button-link" href="{{ decision.file_url }}">
      <i class="hel-icon hel-icon--document"></i>
      <span>{{ 'Download decision (pdf)'|t }}</span>
    </a>
  </div>
  {% endif %}
</div>