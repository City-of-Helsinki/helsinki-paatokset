<?php

use Drupal\Core\Template\Attribute;

/**
 * @file
 * Contains paatokset_submenus.
 */

/**
 * Implements hook_theme().
 */
function paatokset_submenus_theme($existing, $type, $theme, $path) {
  return [
    'block__policymaker_side_nav' => [
      'template' => '/policymaker--side-navigation',
      'path' => $path . '/templates'
    ]
  ];
}

/**
 * Implements hook_preprocess_block().
 */
function paatokset_submenus_preprocess_block(&$variables) {
  $plugins = [
    'agendas_submenu',
    'agendas_submenu_documents'
  ];

  if (in_array($variables['plugin_id'], $plugins)) {
    $variables['title'] = $variables['content']['#title'];
    $variables['years'] = $variables['content']['#years'];
    $variables['list'] = $variables['content']['#list'];
  }
}

/**
 * Implements hook_preprocess_block_HOOK().
 */
function paatokset_submenus_preprocess_block__policymaker_side_nav(&$variables) {
  if(isset($variables['elements']['content']['#items'])) {
    $variables['items'] = $variables['elements']['content']['#items'];
  }

  $variables['#attached']['library'][] = 'hds_web_components/Dropdown';

  if(isset($variables['elements']['content']['#options'])) {
    $attributes = [
      'link-to-selection' => 'link-to-selection',
      'placeholder' => t('Move to page'),
      'options' => $variables['elements']['content']['#options']
    ];

    if(isset($variables['elements']['content']['#current_option'])) {
      $attributes['value'] = $variables['elements']['content']['#current_option'];
    }

    $variables['dropdown_attributes'] = new Attribute($attributes);
  }
} 

/**
 * Implements hook_theme_suggestion_block_alter().
 */
function paatokset_submenus_theme_suggestions_block_alter(&$suggestions, $variables) {
  if(isset($variables['elements']['#plugin_id']) && $variables['elements']['#plugin_id'] === 'agendas_submenu_documents') {
    $suggestions[] = 'block__agendas_submenu';
  }
}
