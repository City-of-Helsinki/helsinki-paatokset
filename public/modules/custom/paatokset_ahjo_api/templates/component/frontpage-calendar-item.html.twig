<div class="frontpage-calendar__item">
  <div class="frontpage-calendar__item-inner">
    <div class="color-line {{ line_color }}"></div>
    <div class="content-container">
      <span class="meeting-date">{{ date|date("d.m.Y â€” H:i") }}</span>
      <h3>{{ policymaker }}</h3>
      {% if motions_link %}
        <a class="motions-link" href="{{motions_link}}">
          <span>{{ open_motions }}</span>
          <i class="hel-icon hel-icon--angle-right"></i>
        </a>
      {% elseif decision_link %}
        <a class="motions-link" href="{{decision_link}}">
          <span>{{ open_decisions }}</span>
          <i class="hel-icon hel-icon--angle-right"></i>
        </a>
      {% elseif minutes_link %}
        <a class="motions-link" href="{{minutes_link}}">
          <span>{{ open_minutes }}</span>
          <i class="hel-icon hel-icon--angle-right"></i>
        </a>
      {% endif %}
    </div>
  </div>
</div>
