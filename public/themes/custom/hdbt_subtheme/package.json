{
  "name": "hdbt_subtheme",
  "version": "1.2.0",
  "description": "Theme builder configuration for HDBT subtheme",
  "author": "Druid",
  "license": "MIT",
  "repository": "github:City-of-Helsinki/helsinki-paatokset",
  "scripts": {
    "dev": "node theme-builder.mjs --watch --dev",
    "build": "npm run format:js --loglevel=silent && npm run lint --loglevel=silent && node theme-builder.mjs",
    "preinstall": "npx update-browserslist-db@latest --loglevel=silent",
    "postinstall": "npm --prefix ../../contrib/hdbt install --no-audit --progress=false --loglevel=silent",
    "lint:scss": "npx --prefix ../../contrib/hdbt/theme-builder postcss \"$INIT_CWD/src/scss/**/*.scss\" --syntax postcss-scss --use css-declaration-sorter --replace --no-map && npm run lint:stylelint --loglevel=silent",
    "lint:stylelint": "npx --prefix ../../contrib/hdbt/theme-builder stylelint \"$INIT_CWD/src/scss/**/*.scss\" --config ../../contrib/hdbt/theme-builder/.stylelintrc.yaml --fix",
    "lint:js": "biome lint src/js/",
    "format:js": "biome format --write src/js/",
    "lint": "npm-run-all --parallel lint:scss lint:js -s",
    "test": "vitest",
    "full-reference": "node --env-file ../../../../.env backstop/backstop_dynamic_config full reference",
    "full-test": "node --env-file ../../../../.env backstop/backstop_dynamic_config full test",
    "coverage": "vitest run --coverage"
  },
  "@comment dependencies": [
    "The following packages were updated manually.",
    "Remove this section once the dependencies have been updated in their respective upstream packages.",
    {
      "diff": "^8.0.3, dependency of backstopjs"
    }
  ],
  "overrides": {
    "diff": "^8.0.3"
  },
  "dependencies": {
    "@appbaseio/reactivesearch": "^3.25.0",
    "@biomejs/biome": "^2.2.4",
    "@elastic/elasticsearch": "^8.17.1",
    "@emotion/styled-base": "^10.3.0",
    "@hdbt/theme-builder": "file:../../contrib/hdbt/theme-builder",
    "@react-aria/visually-hidden": "^3.8.22",
    "@sentry/react": "^10.1.0",
    "@types/luxon": "^3.6.2",
    "@types/node": "^22.0.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/browser": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "backstopjs": "^6.3.25",
    "breakpoint-sass": "^3.0.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "glob": "^11.0.0",
    "hds-core": "^4.6.0",
    "hds-design-tokens": "^4.6.0",
    "hds-react": "^4.6.0",
    "html-react-parser": "^5.0.11",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jotai": "^2.14.0",
    "jsdom": "^26.0.0",
    "luxon": "^3.6.1",
    "npm-run-all2": "^8.0.4",
    "react": "17.0.2",
    "react-calendar": "^6.0.0",
    "react-dom": "17.0.2",
    "react-i18next": "^15.6.1",
    "sass": "^1.89.2",
    "swr": "^2.3.4",
    "ts-loader": "^9.4.2",
    "typescript": "^5.1.6",
    "vitest": "^3.0.8"
  },
  "browserslist": [
    "last 3 major versions",
    "> 1%",
    "not dead"
  ]
}
